<?xml version="1.0"?>

<launch>
  <arg name="camera" default="stereo" />

  <arg name="pi/2" value="1.5707963267948966" />
  <arg name="optical_rotate" value="0 0 0 -$(arg pi/2) 0 -$(arg pi/2)" />

  <node pkg="tf" type="static_transform_publisher" name="$(arg camera)_base_link"
    args="0 -0.06  0 0 0 0 $(arg camera)_link $(arg camera)_depth_frame 100" />  

  <node pkg="tf" type="static_transform_publisher" name="$(arg camera)_base_link2"
    args="$(arg optical_rotate) $(arg camera)_depth_frame $(arg camera)_depth_optical_frame  100" />
  
  <node pkg="tf" type="static_transform_publisher" name="tf_depth_to_cloud"
    args="0 0 0 0 0 0 $(arg camera)_depth_optical_frame $(arg camera)_cloud_optical_frame  100" />

</launch>
